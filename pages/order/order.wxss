.container{
  width:100%;
  height:auto;
  padding:30rpx 0 50rpx 0 ;
}
.content{
  width:97%;
  height:auto;
  margin:0 auto;
  background: #fdf2f6;
  padding-bottom:50rpx;
  border-radius:15rpx;
}
text{
  font-size:34rpx;
  color:#222;
}
.title{
  width:100%;
  height:auto;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 160rpx 0 20rpx 0;
}
.title image{
  width:30rpx;
  height:30rpx;
}
.title text{
  color:#333;
  margin-left:20rpx;
  font-weight: bold;
}
.list{
  width:96%;
  height:auto;
  margin:0 auto;
  background: #fff;
  margin-top:20rpx;
  border:1rpx solid #ddd;
}
.item{
  width:100%;
  height:auto;
  display: flex;
  align-items: center;
  padding:30rpx 0;
  border-bottom:1rpx solid #ddd;
}
.item image{
  width:40rpx;
  height:40rpx;
  margin-left:30rpx;
}
.item input{
  margin-left:20rpx;
  font-size:32rpx;
  color:#888;
}
.picker{
  width:570rpx;
  font-size:32rpx;
  color:#888;
  margin-left:20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picker image{
  width:40rpx;
  height:40rpx;
}
.btn{
  width:95%;
  height:90rpx;
  background: #ff458c;
  color:#fff;
  border:none;
  line-height: 90rpx;
  margin-top:160rpx;
  border-radius:45rpx;
}

